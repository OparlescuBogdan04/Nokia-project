<Window x:Class="Nokia.DebugConsole"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:Nokia"
        mc:Ignorable="d"
        Title="DebugConsole" Height="250" Width="400" ResizeMode="NoResize" Background="Black">
    <Grid>
        <TextBlock x:Name="_DebugConsole" HorizontalAlignment="Center" TextWrapping="Wrap" Text="This is the Debug Console!" VerticalAlignment="Center" Height="200" Width="300" Background="Black" Foreground="CornflowerBlue"/>

    </Grid>
</Window>
